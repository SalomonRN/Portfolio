---
import { type Project } from "@/content/config";

interface Props {
  project: Project;
}

const { project } = Astro.props;

---

<div class="col-span-3 lg:col-span-1 rounded-xl bg-red-950 p-4" data-tilt data-tilt-reverse="true" data-tilt-max="02">
  <picture class="flex flex-col align-middle items-center justify-center m-5 h-[250px]">
    <img class="rounded-lg w-5/6  max-h-full object-cover object-top" src={project.data.img} alt="" />
  </picture>
  <a href=`project/${project.data.title.replaceAll(" ", "")}`> 
    <h3 class="text-center m-5 mt-10 text-3xl truncate">{project.data.title}</h3>
  </a>
  <p class="text-lg m-5 min-h-[250px] text-ellipsis">
    {project.data.description}
  </p>
  <div class="flex flex-wrap ">
    {project.data.technologies.map((tech) => {
      return <h4 class="mx-2 col-span-1 bg-violet-950 rounded-2xl p-2 mb-2">{tech.name}</h4>
    })}
  </div>
</div>
