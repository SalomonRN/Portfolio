---
import { ClientRouter } from "astro:transitions";
import "@/styles/global.css";

interface Props {
  title: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name=description content="SalomÃ³n Ruiz Navarrete - Portfolio">
    <title>{title}</title>
    <ClientRouter />
  </head>
  <body
    class="relative h-full bg-slate-950 [&>div]:absolute [&>div]:bottom-0 [&>div]:left-[-20%] [&>div]:right-0 [&>div]:top-[-10%] [&>div]:h-[500px] [&>div]:w-[500px] [&>div]:rounded-full [&>div]:bg-[radial-gradient(circle_farthest-side,rgba(255,0,182,.15),rgba(255,255,255,0))]"
  >
    <slot />
  </body>
</html>

<style>
  html,
  body {
    /* background-color: #0A0A0A; */
    color: #f9fdfc;
    font-family: monospace;
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
